<%- include('includes/head'); %>
<%- include('includes/nav'); %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="display-1 text-center">Criar Conta ou Entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>
    </div>

    <div class="row">
      <div class="col-lg">
        <h4>Faça seu cadastro</h4>
        <p>Se você ainda não possui conta, preencha o formulario abaixo:</p>
        <%- include('includes/messages'); %>
        <form action="/login/register" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="mb-3">
            <label>Email</label>
            <input name="email" type="email" class="form-control">
          </div>
          <div class="mb-3">
            <label>Senha</label>
            <input name="password" type="password" class="form-control">
          </div>
          <button type="submit" class="btn btn-primary">Criar minha conta</button>
        </form>
      </div>

      <div class="col-lg">
        <h4>Entrar no sistema</h4>
        <p>Se você já possui uma conta, faça login abaixo:</p>
        <form action="/login/login" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="mb-3">
            <label>Email</label>
            <input name="email" type="email" class="form-control">
          </div>
          <div class="mb-3">
            <label>Senha</label>
            <input name="senha" type="password" class="form-control">
          </div>
          <button type="submit" class="btn btn-primary">Entrar</button>
        </form>
      </div>
    </div>

  </div>
</div>

<%- include('includes/footer'); %>